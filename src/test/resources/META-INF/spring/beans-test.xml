<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
        ">

    <import resource="rsserver-test.xml" />

    <bean id="serverBean" class="com.base2.kagura.services.camel.kagura.ServerBean">
        <property name="configPath" value="/TestReports/" />
    </bean>

    <bean id="authBean" class="com.base2.kagura.services.camel.kagura.AuthBean" />
    <bean id="reportBean" class="com.base2.kagura.services.camel.kagura.ReportBean" />

    <context:component-scan base-package="com.base2.kagura.services.camel.kagura" />

    <camelContext xmlns="http://camel.apache.org/schema/spring" id="kagura-camel-context">
        <packageScan>
            <package>com.base2.kagura.services.camel.routes</package>
        </packageScan>
    </camelContext>
</beans>